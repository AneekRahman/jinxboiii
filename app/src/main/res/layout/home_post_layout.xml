<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#282828">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/indicator_holder"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingRight="4dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="1dp"
                app:cardElevation="0dp"
                android:background="@drawable/indicator_black_bg"
                app:cardBackgroundColor="#00ffffff">

                <View
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="0.0"
                    android:transformPivotX="0dp"
                    android:background="@drawable/indicator_white_bg"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Just a stroll through the woods"
                android:textColor="#fff"
                android:fontFamily="@font/varela_round_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#4e4e4e"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="3"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_up_icon"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="8.5dp"
                android:paddingBottom="5.5dp"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:srcCompat="@drawable/ic_eye_icon_white"
                android:layout_marginRight="3dp"
                android:background="@drawable/vector_icon_shadow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38k"
                android:textColor="#fff"
                android:shadowColor="#4e4e4e"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round_regular"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:srcCompat="@drawable/ic_heart_filled_white"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/vector_icon_shadow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5k"
                android:textColor="#fff"
                android:shadowColor="#4e4e4e"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round_regular"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:srcCompat="@drawable/ic_message_icon_white"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/vector_icon_shadow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2k"
                android:textColor="#fff"
                android:shadowColor="#4e4e4e"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_identity_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:clickable="true">

            <ImageView
                android:id="@+id/dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/post_user_border_bg"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@aneek_rahman"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:shadowColor="#4e4e4e"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="3"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/varela_round_regular"/>

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:34PM"
                    android:textColor="#fff"
                    android:shadowColor="#4e4e4e"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/varela_round_regular"/>

            </LinearLayout>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/ic_message_icon_white"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/vector_icon_shadow"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/ic_heart_filled_white"
                android:padding="2dp"
                android:background="@drawable/vector_icon_shadow"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>